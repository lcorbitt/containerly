{
  "name": "containerly",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "lib/*"
  ],
  "scripts": {
    "dev": "npx turbo run dev",
    "dev:infra": "docker compose up -d postgres redis",
    "dev:all": "docker compose up -d postgres redis && npx turbo run dev",
    "build": "npx turbo run build",
    "start": "npx turbo run start",
    "lint": "npx turbo run lint",
    "type-check": "npx turbo run type-check",
    "clean": "npx turbo run clean",
    "seed": "tsx scripts/seed.tsx",
    "migration:generate": "cd apps/api && typeorm-ts-node-commonjs migration:generate",
    "migration:run": "cd apps/api && npm run migration:run",
    "migration:revert": "cd apps/api && npm run migration:revert",
    "migration:show": "cd apps/api && npm run migration:show"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.0",
    "bcrypt": "^5.1.1",
    "tsx": "^4.7.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
